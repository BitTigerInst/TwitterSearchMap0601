<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
      <!-- Bootstrap core CSS -->
    <link href="http://getbootstrap.com/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://getbootstrap.com/dist/js/bootstrap.min.js"></script>
  </head>
  <body>
    <script>
        $(function(){
            $('#myForm').submit(function(e){
                e.preventDefault();
                var data_val = {};
                data_val.text=$('#query').val();
                data_val.city =$('#location').val();
                $.ajax({
                    url:'/submit',
                    data : data_val,
                    type:'get',
                    dataType : 'json',
                    success: function(data) {
                        console.log(data);
                        $(".container").append("div").html(data);
                    }
                })
            });
        })

    </script>
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Twitter Search</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <h1><%= title %></h1>
    <p>Twitter search  <%= title %></p>

    <div class="container" ng-controller = "getResult" ng-submit = >
        <div class="col-md-12">
            <form id = "myForm">
                Query:<br>
                <input class="form-control" type="text" name="query" id = "query">
                <br>
                Location:<br>
                <input class="form-control" type="text" name="location" id = "location">
                <br><br>
                <input type="submit" value="Submit" id ="search_btn">
            </form>
        </div>
    </div>

  </body>
<script>
</script>
</html>
